{
    "name": "peterstollenwerk/auf-kirby-plugin-template",
    "description": "auf kirby plugin template",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Stollenwerk",
            "email": "peter.stollenwerk@aufdesign.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "auf\\": "lib/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "getkirby/composer-installer": "^1.1",
        "hananils/kirby-colors": "^1.1",
        "sylvainjule/previews": "^1.0",
        "timoetting/kirby-builder": "v2.0.15",
        "bnomei/kirby3-autoid": "^2.7"
    },
    "require-dev": {
        "getkirby/cms": "^3.4.2",
        "phpunit/phpunit": "^7.5",
        "spatie/phpunit-watcher": "^1.10"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit  --bootstrap ./tests/bootstrap.php --testdox ./tests/suites --colors=always",
        "watch": "./vendor/bin/phpunit-watcher watch  --bootstrap ./tests/bootstrap.php --testdox ./tests/suites --colors=always"
    }
}
